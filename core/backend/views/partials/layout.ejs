<div class="container-fluid pt-5" style="height:100vh">
  <div class="row h-100">
    <div class="col-sm-3 col-lg-2 pt-4 px-0 bg-light">
      <%- include('sidebar') %>
    </div>
    <div class="d-flex flex-column justify-content-between col-sm-9 col-lg-10 pt-4">
      <!-- Progress Bar -->
      <div id="globalProgressBar" class="progress invisible rounded-0" style="height:5px;margin-top:-1rem;margin-left:-15px;margin-right:-15px;margin-bottom:1rem;">
        <div id="globalProgressBarInner" class="progress-bar progress-bar-striped progress-bar-animated bg-info"
              role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
      </div>

      <!-- Alert box location -->
      <div id="alertPos" style="position:absolute;left:15px;right:15px;"></div>

      <div class="container">
        <!-- Breadcrumbs -->
        <% var paths = slashBefore(url).split('/'); paths.shift() %>
        <ol class="breadcrumb bg-light">
          <% paths.forEach((path, i) => {
            var title = (path === '') ? 'Dashboard' : titleCase(path)
            var last = i === (paths.length - 1) %>

            <li class="breadcrumb-item<%= active(last, true) %>">
              <% if (!last) { %>
                <a href="<%= path %>"><%= title %></a>
              <% } else { %>
                <%= title %>
              <% } %>
            </li>
          <% }) %>
        </ol>
